    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try {
            Socket socket = new Socket(jTextField1.getText(), Integer.parseInt(jTextField2.getText()));
            jTextArea1.setText(jTextArea1.getText() + "client connected to server\n");
            this.setTitle(jTextField3.getText());

            WatchFolder watchFolder = new WatchFolder("Cloud\\" + jTextField3.getText(), new FolderListener());
            watchFolder.start();

            jTextArea2.setText(new Date().toString());
            SharedData.textareaEvents = jTextArea1;
            SharedData.textareaFiles = jTextArea2;
            SharedData.textareaRecords = jTextArea3;
            SharedData.textareaBocks = jTextArea4;
            SharedData.waitingProgressBar = jProgressBar1;
            SharedData.selectedAlgorithm = jComboBox1;

            new ClientSendThread(jButton1, watchFolder, jTextField3.getText(), socket).start();
            new ClientReceiveThread(jButton1, watchFolder, jTextField3.getText(), socket).start();
            jButton1.setEnabled(false);
        } catch (Exception ex) {
            //ex.printStackTrace();
            jTextArea1.setText(jTextArea1.getText() + "Check your Internet ^_^ Or Server Offline" + "\n");
        }
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        try {
            Desktop.getDesktop().open(new File("Cloud\\" + jTextField3.getText()));
        } catch (IOException ex) {
            ex.printStackTrace();
        }
    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton3ActionPerformed
        JFileChooser fc = new JFileChooser();
        fc.showSaveDialog(null);
        if (fc.getSelectedFile() != null) {
            try {
                BufferedWriter writer = new BufferedWriter(new FileWriter(fc.getSelectedFile().getPath()));
                writer.write(jTextArea1.getText());
                writer.close();
                Desktop.getDesktop().open(fc.getSelectedFile());
            } catch (IOException ex) {
                ex.printStackTrace();
            }
        }
    }//GEN-LAST:event_jButton3ActionPerformed

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton4ActionPerformed
        JFileChooser fc = new JFileChooser();
        fc.showSaveDialog(null);
        if (fc.getSelectedFile() != null) {
            try {
