package tester;

import java.util.Arrays;
import java.util.HashMap;

/**
 *
 * @author ASUS
 */
public class Test3_HashMap {

    public static void main(String[] args) throws Exception {
        // from server to clients
        HashMap<Integer, byte[]> blocks = new HashMap<>();
        byte[] a = new byte[2];
        a[0] = 3;
        a[1] = 2;
        byte[] b = new byte[1];
        b[0] = 4;

        blocks.put(0, a);
        blocks.put(2, b);

        System.out.println(Arrays.toString(a));
        for (int i = 0; i < blocks.size(); i++) {
            System.out.println(Arrays.toString(blocks.get(i)));
        }
        for (int i : blocks.keySet()) {
            System.out.println("Block : " + i);
            System.out.println("Data : " + Arrays.toString(blocks.get(i)));
            System.out.println("Data length : " + blocks.get(i).length);
        }
    }
}
